<h2>Les utilisateurs d'Eventbrite</h2>
<div class="row">

  <% User.all.sort.each_with_index do |user, index|  %>

<div class="col-sm-6">
  <div class="card">
    
      <div class="card-body">
          <figure class="profile profile-inline">
            <img src="https://picsum.photos/200/150/?random" class="profile-avatar" alt="">
          </figure>
          <h4 class="card-title">ID : <%= user.id %> - </h4>
          <h4 class="card-title"><%= user.first_name %></h4>
          <h4 class="card-title"><%= user.last_name %></h4>
      </div>
      
      <div>
      </div>

      <div class="card-footer">
      <%= link_to "Editer", edit_admin_user_path(user.id), class:"btn btn-info float-left btn-sm" %>
      <%= link_to "Supprimer", admin_user_path(user.id), method: :delete, class:"btn btn-danger float-right btn-sm" %>
      </div>


  </div>
</div>

  <%end%>

</div>


