<style>
@import url('https://fonts.googleapis.com/css?family=arial');
*
{
  margin: 0;
  padding: 0;
  border: 0;
  box-sizing: border-box
}

body
{
  background-color: #dadde6;
  font-family: arial
}

.fl-left{float: left}

.fl-right{float: right}dadde6

.container
{
  width: 90%;
  margin: 100px auto
}

h1
{
  text-transform: uppercase;
  font-weight: 900;
  border-left: 10px solid #fec500;
  padding-left: 10px;
  margin-bottom: 30px
}

h4
{
  text-transform: uppercase;
  font-weight: 200;
  border-left: 10px solid #fec500;
  padding-left: 10px;
  margin-bottom: 30px
}



.row{overflow: hidden}

.card /* pour le billet */
{
  display: table-row;
  width: 49%;
  background-color: #fff; /* Couleur de l'arrière du billet */
  color: #00000;
  margin-bottom: 10px;
  font-family: 'Oswald', sans-serif;
  text-transform: uppercase;
  border-radius: 4px;
  position: relative
}

.card + .card{margin-left: 2%}

.date
{
  display: table-cell;
  width: 25%;
  position: relative;
  text-align: center;
  border-right: 2px dashed #dadde6
}

.date:before,
.date:after
{
  content: "";
  display: block;
  width: 30px;
  height: 30px;
  background-color: #0000FF;
  position: absolute;
  top: -15px ;
  right: -15px;
  z-index: 1;
  border-radius: 50%
}

.date:after
{
  top: auto;
  bottom: -15px
}

.date time
{
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%)
}

.date time span{display: block}

.date time span:first-child
{
  color: #2b2b2b;
  font-weight: 600;
  font-size: 250%
}

.date time span:last-child
{
  text-transform: uppercase;
  font-weight: 600;
  margin-top: -10px
}

.card-cont
{
  display: table-cell;
  width: 75%;
  font-size: 85%;
  padding: 10px 10px 30px 50px
}

.card-cont h3
{
  color: #3C3C3C;
  font-size: 130%
}

.card-cont > div
{
  display: table-row
}

.card-cont .even-date i,
.card-cont .even-info i,
.card-cont .even-date time,
.card-cont .even-info p
{
  display: table-cell<%= event_find.title %>
}

.card-cont .even-date i,
.card-cont .even-info i
{Located at
}

.card-cont .even-date time span
{
  display: block
}

.card-cont a
{
  display: block;
  text-decoration: none;
  width: 80px;
  height: 30px;
  background-color: #D8DDE0;
  color: #fff;
  text-align: center;
  line-height: 30px;
  border-radius: 2px;
  position: absolute;
  right: 10px;
  bottom: 10px
}

.row:last-child .card:first-child .card-cont a
{
  background-color: #037FDD
}

.row:last-child .card:last-child .card-cont a
{
  background-color: #F8504C
}

@media screen and (max-width: 860px)
{
  .card
  {
    display: block;
    float: none;
    width: 100%;
    margin-bottom: 10px
  }
  
  .card + .card{margin-left: 0}
  
  .card-cont .even-date,
  .card-cont .even-info
  {
    font-size: 75%
  }
}

</style>

  <section class="container">
<h1><%= event_find.title %></h1>
  <div class="row">
    <article class="card fl-left">
      <section class="date">
        <time datetime="<%= event_find.start_date.strftime("%d-%B-%Y")%>">
          <span><%= event_find.start_date.strftime("%d")%></span>
          <span><%= event_find.start_date.strftime("%B")%></span>
        </time>
      </section>
      <section class="card-cont">
        <small>EventBrite vous propose</small>
        <h4><strong><%= event_find.title %></strong></h4>
        <div class="even-date">
        <i class="fa fa-calendar"></i>
        <time>
          <span><%= event_find.start_date.strftime("%F")%> / <%= event_find.duration %> minutes</span> 
        </time>
        </div>
        <div class="even-info">
          <i class="fa fa-map-marker"></i>
          <p><i>VILLE : <%= event_find.location %></i></p>
        </div>
        
    <%if event_admin == current_user.id%>
      <%= link_to "Gére ton évènement", attendances_path(:event => event_find.id), class:"btn btn-primary float-right btn-sm"%>
      <%elsif attendance_guests_list.find_by(guest_id:current_user.id)%>
      <%= link_to "T'es inscrit", class:"btn btn-success float-right btn-sm" %>
      <%else%>
      <%= link_to "Inscris toi", new_charge_path(:event => event_find.id), class:"btn btn-info float-right btn-sm"%>
    <%end %>
      </section>
  <footer>
  </footer>
	


