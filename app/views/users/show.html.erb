<div class="div_text_centered">

<h3>Avatar actuel</h3>
<%if current_user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>

  <h2>User's first name</h2>
    <p><%= current_user.first_name %></p><br/>
  <h2>User's last name</h2>
    <p><%= current_user.last_name  %></p><br/>
  <h2>Description </h2>
    <p><%= current_user.description %></p><br/>
  <h2>User's email</h2>
    <p><%= current_user.email %></p><br/>
  <br/>
  <h5><a href="../users/edit" class ="btn btn-info">Update your personal data</a></h5>
  <hr>

  <h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(current_user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
  <br/>
<% end %>

</div>

<div class="row">
  <% Event.all.sort.each_with_index do |event, index|  %>
    <%if event.admin_id == current_user.id%>
      <div class="col-sm-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.admin.first_name %></p>
            <%= link_to "event n°#{event.id}", event_path(event.id), class:"btn btn-secondary" %>
          </div>
        </div>
        <br/>
      </div>
    <%end%>
  <% end %>

</div>